Algoritmo tpProgramacion
	Definir ciudades, origen,horarios,origenMay,destino Como Caracter
	Definir cantDestinos,optMenu,cantVuelos como entero
	cantDestinos<-3
	cantVuelos<-3
	Dimension ciudades[cantDestinos],horarios[cantVuelos]
	cargarDestinos(ciudades)
	horariosVuelos(horarios)
	Repetir
		menu()
		Leer optMenu
		Segun optMenu Hacer
			1:
				
				Escribir "Destinos disponibles: " 
				mostrarArray(ciudades,cantDestinos)
				
			2:
				Escribir "Buscar Vuelos Disponibles: "
				mostrarArray(ciudades,cantDestinos)
				Escribir "Ingrese su lugar de origen, para ver los vuelos disponibles"
				Leer origen
				origen=Mayusculas(origen)

				Para i<-0 Hasta cantDestinos-1 Hacer //ARREGLAR ESTOS FOR Y HACERLOS CON WHILE
					si origen == ciudades[i]
						ciudades[i]=Mayusculas(ciudades[i])
						Escribir "Ingrese destino: "
						Leer destino
						destino=Mayusculas(destino)
					FinSi
					Para i<-0 Hasta cantDestinos-1 Hacer
						si destino == ciudades[i] Entonces
					Limpiar Pantalla
							Escribir "Vuelos disponibles:"
							mostrarArray(horarios,cantVuelos)
						FinSi
					FinPara
				FinPara
				
				//filtrar rosario y que aparezcan solo los destinos.
				//buenos aires
				//cordoba 
				//rosa - cord 4 ---- 13 15 20 00
				//usuarios registrados
				//fila 					col
				//rosario					13hs - 15hs
				//cordoba 				11hs - 20hs
				//preguntar ORIGEN, en base a la rta recorrer array 
			3:
				
			4:
				
			5:	Escribir "Finalizo Programa"
		Fin Segun
	Hasta Que optMenu == 5
	
	
FinAlgoritmo

SubProceso menu()
	Escribir "-->BIENVENIDO A FIVEPOINT AEROLINEAS<--"
	Escribir "1- Consultar destinos disponibles"
	Escribir "2- Buscar vuelos disponibles"
	Escribir "3- Reservar un pasaje"
	Escribir "4- Revisar estado de la reserva"
	Escribir "5-SALIR"
	
FinSubProceso

SubProceso mostrarArray(array,n)
	Definir i Como Entero
	Para i<-0 Hasta n-1 Hacer
		Escribir array[i]	
	FinPara
	
FinSubProceso

SubProceso cargarDestinos(array)
	array[0]<- "ROSARIO"
	array[1]<- "MENDOZA"
	array[2]<- "BUENOS AIRES"
FinSubProceso
SubProceso horariosVuelos(array)
	array[0]<- "Vuelo 1 --->10:00AM"
	array[1]<- "Vuelo 2 --->18:00PM"
	array[2]<- "Vuelo 3 --->01:00AM"
FinSubProceso

